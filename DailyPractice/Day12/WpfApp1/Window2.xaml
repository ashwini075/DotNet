        <Label  x:Name="lblSum" Content="Sum" HorizontalAlignment="Left" Margin="241,268,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSum" HorizontalAlignment="Left" Height="23" Margin="417,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtSum_TextChanged"/>
        <Button x:Name="btnShowSum" Content="show Sum" HorizontalAlignment="Left" Margin="417,331,0,0" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>
